<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hagez" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Accent</item>
        <item name="colorPrimaryVariant">@color/AccentVariant</item>
        <item name="colorOnPrimary">@color/Background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Accent</item>
        <item name="colorSecondaryVariant">@color/AccentVariant</item>
        <item name="colorOnSecondary">@color/BackgroundSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/BackgroundSecondary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Hagez.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Hagez.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Hagez.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>